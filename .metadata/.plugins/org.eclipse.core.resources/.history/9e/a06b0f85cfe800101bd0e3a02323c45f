package com.keeplynk.ai.agent;

import java.util.HashMap;
import java.util.Map;

public class AgentContext {

    private AgentInput input;
    private String resourceId;
    private String url;
    private String title;
    private String description;
    private String persona;

    private Map<String, Object> memory = new HashMap<>();

    public static AgentContext from(AgentInput input) {
        AgentContext context = new AgentContext();
        context.input = input;
        return context;
    }

    public AgentInput getInput() {
        return input;
    }

    public void setInput(AgentInput input) {
        this.input = input;
    }

	public String getResourceId() {
		return resourceId;
	}

	public void setResourceId(String resourceId) {
		this.resourceId = resourceId;
	}

	public String getUrl() {
		return url;
	}

	public void setUrl(String url) {
		this.url = url;
	}

	public String getTitle() {
		return title;
	}

	public void setTitle(String title) {
		this.title = title;
	}

	public String getDescription() {
		return description;
	}

	public void setDescription(String description) {
		this.description = description;
	}

	public String getPersona() {
		return persona;
	}

	public void setPersona(String persona) {
		this.persona = persona;
	}

	public Map<String, Object> getMemory() {
		return memory;
	}

	public void setMemory(Map<String, Object> memory) {
		this.memory = memory;
	}

    // getters & setters
}

